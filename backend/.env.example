# Environment
DEBUG=true

# Database
# Docker 环境（使用 Docker 数据库）：DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/papermate
# 本地环境（使用外部数据库）：DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/papermate
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/papermate

# Local File Storage
UPLOAD_DIR=./uploads

# MinerU PDF Parser
# Cloud API (recommended)
MINERU_USE_CLOUD=true
MINERU_API_URL=https://mineru.net
MINERU_API_KEY=your-mineru-api-key  # Get from https://mineru.net/apiManage
# Local deployment (alternative)
# MINERU_USE_CLOUD=false
# MINERU_API_URL=http://localhost:8010

# JWT (IMPORTANT: Generate a strong random key for production!)
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# OpenAI (or OpenAI-compatible API)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1  # Custom API URL (optional)
OPENAI_MODEL=gpt-4o

# Tavily Search (optional, for ReAct agent web search)
TAVILY_API_KEY=your-tavily-api-key-here

# SearXNG (optional, alternative search)
# SEARXNG_URL=http://localhost:8080
